<!doctype html>
<html lang="es">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <!-- Usamos boxicons -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>

    <!-- Usamos dataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css">
    <link rel="" href="https://cdn.datatables.net/fixedheader/3.1.6/css/fixedHeader.dataTables.min.css">



    <style>
    .button {
      border-radius: 2px;
      color: white;
      padding: 0px 3px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 12px;
      margin: 1px 1px;
      transition-duration: 0.4s;
      background-color: rgb(168, 180, 152);
      cursor: pointer;
    }


    .button:hover {
      background-color: #4CAF50;
      color: white;
    }

    .container-boton {
      background-color: rgb(32, 36, 30);
      margin-top: 1px;
      margin-bottom: 1px;
      padding-left: 20px;
      padding-right: 20px;
      border-radius: 10px;
    }


    #header {
      width: 100%;
      height: 45px;
      display: inline-block;
      background-color:darkslategrey;
    }

    #logotipo {
      display: inline-block;
      margin: auto;
      width: 50%;
      max-width: 100px;
      min-width: 30px;
    }

    #titulo {
      width: 50%;
      font-family: Arial, Helvetica, sans-serif;
      font-size: 14px;
      color: floralwhite;
      text-align: left;
      font-weight: bold;
      vertical-align: middle;
      padding: 5px 10px;
  }

		.centrado_th{text-align:center;border:1px dotted #000; padding:8px; color: white}

    table.left {
      margin-left: auto; 
      margin-right: auto;
    }

    #problemas {
      font-family: Arial, Helvetica, sans-serif;
      border-collapse: collapse;
      width: 80%;      
    }
    
    #problemas td, #problemas th {
      border: 1px solid #ddd;
      padding: 5px;
    }  

    #problemas tr:nth-child(even){background-color: #f2f2f2;}
    #problemas tr:hover {background-color: #ddd;}  
    
    #problemas th {
      padding-top: 5px;
      padding-bottom: 5px;
      text-align: center;
      background-color: #171817;
      color: white;
      font-size: 11px;
    }

    #problemas tr {
      font-size: 10px;
       text-align: justify;
    }  

	</style>


    <title>IMSS Problematica - CDI / BIOMEDICO</title>
  </head>
  <body>

    <div id="container">
      <div id="header">
        <div id="titulo">PROBLEMATICA - CDI / BIOMEDICO</div>
      </div>
    </div>

    <div class="container">
        <table id="problemas"> 
            <thead>
                <tr  class="centrado_th">
                    <th width="6%" scope="col">Acciones</th>
                    <th width="18%"  scope="col">OOAD</th>
                    <th width="11%" scope="col">Estado</th>
                    <th width="46%" scope="col">Descripci√≥n</th>
                    <th width="4%" scope="col">ID</th>
                </tr>
            </thead>
            <tbody>
                <% if (resultado.length > 0) { %>
                <% resultado.forEach((problems) => { %>
                    <tr>
                        <td>
                          <a href="/cdi/editaOOAD/<%= problems.CVE_OOAD_PROBLEMATICA %>" class="btn btn-success btn-sm">Editar</a>
                        </td>
                        <td><%= problems.OOAD_NOMBRE %></td>
                        <td><%= problems.STATUS %></td>
                        <td><%= problems.DES_OTRO %></td>
                        <td><%= problems.CVE_OOAD_PROBLEMATICA %></td>
                    </tr>
                <% }) %>
                <% } %>   
              </tbody>
        </table>
    </div>



